#!/usr/bin/env python-i

import sys, os
from rasmus.tablelib import *
from rasmus.util import *
from rasmus.stats import *

if len(sys.argv) < 2:
    print "USAGE: vtab <table file>"
    sys.exit(1)

_step = 1000
t = readTable(sys.argv[1])

def show(t):
    _stream = os.popen("less -S", "w")

    for i in xrange(0, len(t), _step):
        t[i:i+_step].writePretty(_stream)
        _stream.write("\n")
    
show(t)





